full_hostname = `hostname`
domainname = full_hostname.split('.')[1..-1].join('.')
hostname = full_hostname.split('.')[0]

CA[:hostname] = hostname
CA[:domainname] = domainname
CA[:CA_dir] = "CA"
CA[:password] = '1234'

CERTS << {
  :type => 'server',
  :hostname => 'server',
  :password => '5678',
}

CERTS << {
  :type => 'client',
  :user => 'client',
  :email => 'will@systeminsights.com',
}